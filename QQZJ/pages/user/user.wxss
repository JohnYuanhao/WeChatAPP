/* pages/user/user.wxss */
.profile{
    margin: 20rpx auto;
    margin-top: 0rpx;
    width: 100%;
    height: 400rpx;
    background: #fff;
    text-align: center;
}
.profile image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    margin: 15rpx;
    margin-top: 30rpx;
}
.profile text{
    display: block;
    margin: 15rpx auto;
}
.statistics{
    width: 80%;
    margin: 0rpx auto;
}
.stars{
    float: right;
}
.stars text{
    display: inline;
    font-family: "Times New Roman";
    font-size: 1rem;
}
.pnum{
    float: left;
}
.pnum text{
    display: inline;
    font-family: "Times New Roman";
    font-size: 1rem;
}
.post{
    width: 44%;
    height: 330rpx;
    float: left;
    margin-top: 30rpx;
}
.post-l{
    margin-left: 4%;
    margin-right: 2%;
}
.post-r{
    margin-left: 2%;
    margin-right: 4%;
}
.post image{
    width: 100%;
    height: 330rpx;
    display: block;
}
.info{
    width: 100%;
    height: 65rpx;
    background: rgba(50, 50, 50, 0.8);
    position: relative;
    top: -65rpx;
}
.like{
    height: 100%;
    width: 40%;
    float: left;
    line-height: 65rpx;
    color: #fff;
}
.like image{
    height: 50rpx;
    width: 50rpx;
    margin: 7.5rpx;
    display: block;
    float: left;
}
.ctime{
    height: 100%;
    width: 40%;
    float: right;
    line-height: 65rpx;
    text-align: right;
    padding-right: 10rpx;
    color: #fff;
}
.view-more{
    text-align: center;
    margin: 0rpx auto;
    margin-top: 30rpx;
    color: #666;
}
.view-more-hover{
    color: #000;
}