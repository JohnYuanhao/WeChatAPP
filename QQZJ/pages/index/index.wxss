/* pages/index/index.wxss */
.container{
    width: 100%;
}
.section{
    width: 100%;
}
.post{
    width: 44%;
    height: 330rpx;
    float: left;
    margin-top: 30rpx;
}
.post-l{
    margin-left: 4%;
    margin-right: 2%;
}
.post-r{
    margin-left: 2%;
    margin-right: 4%;
}
.post image{
    width: 100%;
    height: 330rpx;
    display: block;
}
.info{
    width: 100%;
    height: 65rpx;
    background: rgba(50, 50, 50, 0.8);
    position: relative;
    top: -65rpx;
}
.like{
    height: 100%;
    width: 40%;
    float: left;
    line-height: 65rpx;
    color: #fff;
}
.like image{
    height: 50rpx;
    width: 50rpx;
    margin: 7.5rpx;
    display: block;
    float: left;
}
.ctime{
    height: 100%;
    width: 40%;
    float: right;
    line-height: 65rpx;
    text-align: right;
    padding-right: 10rpx;
    color: #fff;
}