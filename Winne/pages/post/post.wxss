/* pages/post/post.wxss */
page{
    background: #fff;
}
.header{
    width: 100%;
    height: 150rpx;
    background: #fff;
    line-height: 150rpx;
    position: fixed;
    z-index: 10;
    border-bottom: 1rpx solid #efefef;
}
.avatar{
    float: left;
    width: 150rpx;
    height: 150rpx;
}
.avatar image{
    width: 70%;
    height: 70%;
    border-radius: 50%;
    display: block;
    margin: 15%;
}
.like{
    width: 150rpx;
    height: 150rpx;
    float: right;
}
.like image{
    width: 80%;
    height: 80%;
    margin: 10%;
}
.like .num{
    text-align: center;
    position: relative;
    z-index: 10;
    top: -213rpx;
}
.like-num{
    color: #fff;
}
.unlike-num{
    color: #000;
}
.container{
    width: 100%;
    margin-top: 150rpx;
}
.pic{
    width: 100%;
    height: 750rpx;
    margin: auto;
    margin-top: 20rpx;
}
.pic image{
    width: 100%;
    height: 100%;
}
.postTime{
    float: right;
    margin: 20rpx;
}
.outline{
    width: 90%;
    margin: 0rpx auto;
    line-height: 50rpx;
    background: #fff;
    text-indent: 2rem;
}