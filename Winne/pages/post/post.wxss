/* pages/post/post.wxss */
.container{
    width: 100%;
}
.header{
    width: 100%;
    height: 150rpx;
    background: #fff;
    line-height: 150rpx;
}
.avatar{
    float: left;
    width: 150rpx;
    height: 150rpx;
}
.avatar image{
    width: 70%;
    height: 70%;
    border-radius: 50%;
    display: block;
    margin: 15%;
}
.like{
    width: 150rpx;
    height: 150rpx;
    float: right;
}
.like image{
    width: 80%;
    height: 80%;
    margin: 10%;
}
.like .num{
    text-align: center;
    position: relative;
    z-index: 10;
    top: -213rpx;
    color: #fff;
}
.pic{
    width: 100%;
    height: 750rpx;
    margin-top: 20rpx;
}
.pic image{
    width: 100%;
    height: 100%;
}
.outline{
    width: 100%;
    line-height: 35rpx;
    margin-top: 30rpx;
    padding: 20rpx;
    background: #fff;
}